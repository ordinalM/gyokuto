#!/usr/bin/env php
<?php
require_once 'vendor/autoload.php';

// Use -o /path/to/options/file.yml for a different options file on startup
// Use -v1 for verbose output

$options = getopt('o:v:');

use Gyokuto\Build;
use Gyokuto\Utils;
use Monolog\Logger;

try {
  if ($options['v'] ?? false) {
    Utils::setLogLevel(Logger::DEBUG);
  }
	$build = new Build($options['o'] ?? null);
  $build->run();
}
catch (Throwable $e) {
  echo $e->getMessage();
  exit(1);
}

exit(0);